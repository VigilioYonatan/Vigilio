{
    "name": "@vigilio/valibot",
    "version": "0.2.3",
    "description": "form validation valibot - spanish.",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.cts",
                "default": "./dist/cjs/index.cjs"
            }
        },
        "./resolver": {
            "import": "./dist/esm/resolver/index.js",
            "require": "./dist/cjs/resolver/index.js"
        }
    },
    "typesVersions": {
        "*": {
            "resolver": [
                "./dist/esm/resolver/index.d.ts"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/VigilioYonatan/Vigilio/blob/main/valibot/README.md"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "logo.png",
        "valibot.png"
    ],
    "keywords": [
        "typescript",
        "zod",
        "valibot",
        "spanish",
        "translate"
    ],
    "scripts": {
        "build:esm": "tsc",
        "build:cjs": "tsc --module commonjs --outDir dist/cjs",
        "build": "rm -rf dist && bun run build:esm && bun run build:cjs",
        "public": "bun run build && npm publish"
    },
    "author": "Vigilio",
    "license": "ISC",
    "dependencies": {
        "tslib": "^2.6.2"
    },
    "devDependencies": {
        "rimraf": "^5.0.5",
        "tsup": "^8.5.0",
        "typescript": "^5.3.3"
    }
}
